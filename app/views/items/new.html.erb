<h1>Create a new item</h1>

<div class="new-item">
  <%= form_with url: merchant_items_path(@merchant.id), method: :post do |form| %>
    <p><%= form.label :name, "Add a Name: " %>
    <%= form.text_field :name, required: true %></p>

    <p><%= form.label :description, "Give a Description: " %>
    <%= form.text_field :description, required: true %></p>

    <p><%= form.label :unit_price, "Set a Price: " %>
    <%= form.text_field :unit_price, required: true %></p>

    <p><%= form.submit "Submit"%></p>
  <% end %>
</div>
