<h1>Edit <%= @item.name %>'s Details?</h1>

<div class="edit-item-details">
<h2>Item Details:</h2>
  <%= form_with url: "/merchants/#{@merchant.id}/items/#{@item.id}/edit", method: :patch, local: true do |form| %>
    <%= form.label :name, "Name: " %>
    <%= form.text_field :name %>

    <%= form.label :description, "Description: " %>
    <%= form.text_field :description %>

    <%= form.label :unit_price, "Current Selling Price: " %>
    <%= form.text_field :unit_price %>

    <%= form.submit "Submit Changes"%>
  <% end %>

  <p><strong>Name: </strong><%= @item.name %></p>
  <p><strong>Description: </strong><%= @item.description %></p>
  <p><strong>Current Selling Price: </strong><%= @item.unit_price %></p>
</div>