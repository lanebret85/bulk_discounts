<h1>Edit <%= @item.name %>'s Details?</h1>

<div class="edit-item-details">
<h2>Item Details:</h2>
  <%= form_with model: @item, url: "/merchants/#{@merchant.id}/items/#{@item.id}", method: :patch, local: true do |form| %>
    <p><%= form.label :name, "Name: " %>
    <%= form.text_field :name %></p>

    <p><%= form.label :description, "Description: " %>
    <%= form.text_field :description %></p>

    <p><%= form.label :unit_price, "Current Selling Price: " %>
    <%= form.text_field :unit_price %></p>

    <p><%= form.submit "Submit"%></p>
  <% end %>
</div>