<%= form_with url: "/merchants/#{@merchant.id}/bulk_discounts", method: :post, data: {turbo: false} do |form| %>
  <%= form.label :quantity_threshold %>
  <%= form.number_field :quantity_threshold, minimum: 1, step: 1 %>
  <%= form.label :percentage_discount %>
  <%= form.number_field :percentage_discount, minimum: 0.01, step: 0.01 %>
  <%= form.submit "Submit" %>
<% end %>