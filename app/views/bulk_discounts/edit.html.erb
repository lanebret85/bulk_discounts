<h1>Edit this Discount</h1>

<%= form_with url: "/merchants/#{@merchant.id}/bulk_discounts/#{@bulk_discount.id}", method: :patch, data: {turbo: false} do |form| %>
  <%= form.label "Minimum Items:" %>
  <%= form.number_field :quantity_threshold, minimum: 1, step: 1, value: @bulk_discount.quantity_threshold %>
  <%= form.label "Discount as a Decimal:" %>
  <%= form.number_field :percentage_discount, minimum: 0.01, step: 0.01, value: @bulk_discount.percentage_discount %>
  <%= form.submit "Submit" %>
<% end %>