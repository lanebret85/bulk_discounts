<h1>Admin Dashboard</h1>

<%= link_to "Admin Merchants Index", admin_merchants_path %>
<%= link_to "Admin Invoices Index", admin_invoices_path %>

<h2>Incomplete Invoices</h2>
<section id="incomplete">
<ul>
  <% @incomplete_invoices.each do |invoice| %>
    <li>Invoice <%= link_to "##{invoice.id}", admin_invoice_path(invoice) %> - <%= invoice.created_at.strftime('%A, %B %-d, %Y') %></li>
  <% end %>
</ul>
</section>

<h2>Top 5 Customers:</h2>
<section id="top-five">
<% @top_five_customers.each_with_index do |customer, index| %>
  <p><%= index + 1 %>. <%= customer.first_name %> <%= customer.last_name %> - <%= customer.success_transactions %> purchases</p>
<% end %>
